<div class="flex items-center justify-center bg-gray-50 py-8 px-4 sm:px-6 lg:px-8 min-h-screen sm:min-h-0 sm:py-16">
  <div class="max-w-md w-full space-y-6">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        <%= t('passwords.edit.title') %>
      </h2>
    </div>

    <% if alert = flash[:alert] %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800"><%= alert %></p>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put, class: "mt-8 space-y-6" do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.label :password, t('passwords.edit.password'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password,
                required: true,
                autocomplete: "new-password",
                placeholder: t('passwords.edit.password'),
                maxlength: 72,
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :password_confirmation, t('passwords.edit.password_confirmation'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password_confirmation,
                required: true,
                autocomplete: "new-password",
                placeholder: t('passwords.edit.password_confirmation'),
                maxlength: 72,
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.submit t('passwords.edit.reset_password'), class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
