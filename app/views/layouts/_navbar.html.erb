<% if current_user %>
  <nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="container mx-auto px-5">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-4 md:space-x-8">
          <%= link_to dashboard_path, class: "text-lg md:text-xl font-bold text-gray-900 truncate hover:text-gray-700" do %>
            <%= Setting.instance.circle_name %>
          <% end %>
          <div class="flex items-center space-x-2 md:space-x-4">
            <% if current_user.admin? %>
              <!-- デスクトップ: 個別リンク表示 -->
              <div class="hidden lg:flex lg:space-x-4">
                <%= link_to Event.model_name.human, admin_events_path, class: "px-3 py-2 rounded-md text-sm font-medium #{request.path.start_with?('/admin/events') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" %>
                <%= link_to Announcement.model_name.human, admin_announcements_path, class: "px-3 py-2 rounded-md text-sm font-medium #{request.path.start_with?('/admin/announcements') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" %>
                <%= link_to "テンプレート", admin_announcement_templates_path, class: "px-3 py-2 rounded-md text-sm font-medium #{request.path.start_with?('/admin/announcement_templates') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" %>
                <%= link_to Venue.model_name.human, admin_venues_path, class: "px-3 py-2 rounded-md text-sm font-medium #{request.path.start_with?('/admin/venues') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" %>
                <%= link_to User.model_name.human, admin_users_path, class: "px-3 py-2 rounded-md text-sm font-medium #{request.path.start_with?('/admin/users') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" %>
                <%= link_to Setting.model_name.human, edit_admin_setting_path, class: "px-3 py-2 rounded-md text-sm font-medium #{request.path.start_with?('/admin/setting') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" %>
              </div>
              <!-- モバイル/タブレット: ドロップダウン -->
              <div class="relative lg:hidden" data-controller="mobile-menu">
                <button type="button" data-action="click->mobile-menu#toggle" class="px-2 py-2 rounded-md text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50 flex items-center">
                  管理
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div data-mobile-menu-target="menu" class="hidden absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50">
                  <div class="py-1">
                    <%= link_to Event.model_name.human, admin_events_path, class: "block px-4 py-2 text-sm #{request.path.start_with?('/admin/events') ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-100'}" %>
                    <%= link_to Announcement.model_name.human, admin_announcements_path, class: "block px-4 py-2 text-sm #{request.path.start_with?('/admin/announcements') ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-100'}" %>
                    <%= link_to "テンプレート", admin_announcement_templates_path, class: "block px-4 py-2 text-sm #{request.path.start_with?('/admin/announcement_templates') ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-100'}" %>
                    <%= link_to Venue.model_name.human, admin_venues_path, class: "block px-4 py-2 text-sm #{request.path.start_with?('/admin/venues') ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-100'}" %>
                    <%= link_to User.model_name.human, admin_users_path, class: "block px-4 py-2 text-sm #{request.path.start_with?('/admin/users') ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-100'}" %>
                    <%= link_to Setting.model_name.human, edit_admin_setting_path, class: "block px-4 py-2 text-sm #{request.path.start_with?('/admin/setting') ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-100'}" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="relative" data-controller="mobile-menu">
          <button type="button" data-action="click->mobile-menu#toggle" class="flex items-center text-sm text-gray-600 hover:text-gray-900">
            <span class="truncate max-w-[100px] md:max-w-none"><%= current_user.name.presence || current_user.email_address %></span>
            <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div data-mobile-menu-target="menu" class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50">
            <div class="py-1">
              <%= link_to "プロフィール", edit_profile_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= button_to "ログアウト", session_path, method: :delete, data: { turbo_confirm: "ログアウトしますか？" }, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
<% end %>
