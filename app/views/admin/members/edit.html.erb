<div class="w-full max-w-2xl mx-auto">
  <div class="mb-4">
    <%= link_to "← #{Member.model_name.human}詳細に戻る", admin_member_path(@member), class: "text-blue-600 hover:text-blue-700 text-sm" %>
  </div>
  <h1 class="text-3xl font-bold text-gray-900 mb-8"><%= Member.model_name.human %>を編集</h1>

  <%= form_with model: [:admin, @member], class: "space-y-6" do |form| %>
    <% if @member.errors.any? || @member.user.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= t('errors.template.header') %></h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @member.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              <% @member.user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6 space-y-6">
        <div>
          <%= form.label :name, "お名前", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :organization_name, "所属団体", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :organization_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :rank, "級", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :rank,
                options_for_select([["不明（初心者）", "unknown"], ["F級", "f"], ["E級", "e"], ["D級", "d"], ["C級", "c"], ["B級", "b"], ["A級", "a"]], @member.rank),
                { include_blank: "" },
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :description, "自己紹介", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <hr class="border-gray-200">

        <div class="flex items-center">
          <%= form.check_box :receives_announcements, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :receives_announcements, "お知らせメールを受信する", class: "ml-2 block text-sm text-gray-700" %>
        </div>

        <div class="flex items-center">
          <%= form.check_box :disabled, checked: @member.disabled?, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" %>
          <%= form.label :disabled, "無効", class: "ml-2 block text-sm text-gray-700" %>
          <span class="ml-2 text-xs text-gray-500">（ログイン不可、お知らせメール送信対象外）</span>
        </div>
      </div>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "キャンセル", admin_member_path(@member), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "更新", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    </div>
  <% end %>
</div>
