<% if @event.upcoming? %>
  <div class="flex justify-end mb-4">
    <%= link_to "お知らせを作成", new_admin_announcement_path(event_id: @event.id), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>

<div class="bg-white shadow sm:rounded-lg">
  <% if announcements.any? %>
    <ul class="divide-y divide-gray-200">
      <% announcements.each do |announcement| %>
        <li>
          <%= link_to admin_announcement_path(announcement), class: "block px-4 py-3 hover:bg-gray-50" do %>
            <div class="flex items-center justify-between">
              <p class="text-sm font-medium text-blue-600 truncate"><%= announcement.subject %></p>
              <% if announcement.sent? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">送信済み</span>
              <% else %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">下書き</span>
              <% end %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="px-4 py-5 sm:p-6 text-center text-gray-500">
      お知らせはありません
    </div>
  <% end %>
</div>
