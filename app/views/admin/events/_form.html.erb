<%= form_with(model: event, url: event.persisted? ? admin_event_path(event) : admin_events_path, class: "space-y-6") do |form| %>
  <% if event.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :venue_id, t('events.form.venue'), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :venue_id, @venues, :id, :name,
          { prompt: t('helpers.select.prompt') },
          { class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
  </div>

  <div>
    <%= form.label :date, t('events.form.date'), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.date_field :date,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :start_time, t('events.form.start_time'), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.time_field :start_time,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :end_time, t('events.form.end_time'), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.time_field :end_time,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :notes, t('events.form.notes'), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :notes,
          rows: 4,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "キャンセル", admin_events_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
