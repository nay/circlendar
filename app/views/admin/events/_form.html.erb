<%= form_with(model: event, url: event.persisted? ? admin_event_path(event) : admin_events_path, class: "space-y-6") do |form| %>
  <% if event.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= t('errors.template.header') %>
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <div class="mb-2">
      <%= form.label :date, t('events.form.date'), class: "text-sm font-medium text-gray-700" %><span class="text-red-500 ml-1">*</span>
    </div>
    <%= form.date_field :date,
          required: true,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <div class="mb-2">
      <%= form.label :venue_id, t('events.form.venue'), class: "text-sm font-medium text-gray-700" %><span class="text-red-500 ml-1">*</span>
    </div>
    <%= form.collection_select :venue_id, @venues, :id, :name,
          { prompt: t('helpers.select.prompt') },
          { class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm", required: true } %>
  </div>

  <div>
    <div class="mb-2">
      <%= form.label :schedule, t('events.form.schedule'), class: "text-sm font-medium text-gray-700" %><span class="text-red-500 ml-1">*</span>
    </div>
    <%= form.text_field :schedule,
          required: true,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :status, "公開状態", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="flex gap-4">
      <label class="inline-flex items-center">
        <%= form.radio_button :status, "draft", class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
        <span class="ml-2 text-sm text-gray-700">下書き</span>
      </label>
      <label class="inline-flex items-center">
        <%= form.radio_button :status, "published", class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
        <span class="ml-2 text-sm text-gray-700">公開</span>
      </label>
    </div>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "キャンセル", admin_events_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
