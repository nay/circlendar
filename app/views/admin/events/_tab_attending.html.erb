<% attending = attendances.attending %>
<div class="bg-white shadow sm:rounded-lg">
  <% if attending.any? %>
    <ul class="divide-y divide-gray-200">
      <% attending.each do |attendance| %>
        <li class="px-4 py-4 sm:px-6">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
            <div class="font-medium text-gray-900"><%= attendance.player.name %></div>
            <div class="flex flex-wrap gap-x-4 gap-y-1 text-sm text-gray-600">
              <span>到着: <%= attendance.arrival_time&.strftime('%H:%M') || '-' %></span>
              <span>退出: <%= attendance.departure_time&.strftime('%H:%M') || '-' %></span>
              <span>アフター: <%= I18n.t("activerecord.attributes.attendance.after_parties.#{attendance.after_party}") %></span>
            </div>
          </div>
          <% if attendance.message.present? %>
            <div class="mt-2 text-sm text-gray-500"><%= attendance.message %></div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="px-4 py-5 sm:p-6 text-center text-gray-500">
      参加者はいません
    </div>
  <% end %>
</div>
