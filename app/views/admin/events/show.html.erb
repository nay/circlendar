<div class="w-full">
  <div class="mb-4">
    <%= link_to "← 練習会一覧に戻る", admin_events_path, class: "text-blue-600 hover:text-blue-700 text-sm" %>
  </div>
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('events.show.title') %></h1>
    <div class="flex gap-2">
      <%= link_to "コピーして作成", new_admin_event_path(source_event_id: @event.id), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= link_to t('events.show.edit'), edit_admin_event_path(@event), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= button_to t('events.show.delete'), admin_event_path(@event), method: :delete, data: { turbo_confirm: t('events.show.confirm_delete') }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center gap-2">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          <%= @event.headline %>
        </h3>
        <% if @event.published? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">公開中</span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">下書き</span>
        <% end %>
      </div>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 mb-1"><%= t('events.form.venue') %></dt>
          <dd class="text-sm text-gray-900"><%= link_to @event.venue.name, admin_venue_path(@event.venue), class: "text-blue-600 hover:text-blue-700" %></dd>
        </div>

        <div class="bg-white px-4 py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 mb-1"><%= t('events.form.schedule') %></dt>
          <dd class="text-sm text-gray-900"><%= @event.schedule %></dd>
        </div>
      </dl>
    </div>
  </div>

  <% attending_count = @attendances.attending.count %>
  <% not_attending_count = @attendances.where(status: [:not_attending, :undecided]).count %>
  <div class="border-b border-gray-200 mb-4">
    <nav class="-mb-px flex">
      <%= link_to "お知らせ", admin_event_path(@event, tab: "announcements"),
            class: "w-48 py-2 text-center border-b-2 text-sm font-medium #{@current_tab == 'announcements' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
      <%= link_to "参加者(#{attending_count})", admin_event_path(@event, tab: "attending"),
            class: "w-48 py-2 text-center border-b-2 text-sm font-medium #{@current_tab == 'attending' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
      <%= link_to "不参加・保留の回答者(#{not_attending_count})", admin_event_path(@event, tab: "not_attending"),
            class: "w-48 py-2 text-center border-b-2 text-sm font-medium #{@current_tab == 'not_attending' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
    </nav>
  </div>

  <% case @current_tab %>
  <% when "attending" %>
    <%= render "tab_attending", attendances: @attendances %>
  <% when "not_attending" %>
    <%= render "tab_not_attending", attendances: @attendances %>
  <% when "announcements" %>
    <%= render "tab_announcements", announcements: @announcements %>
  <% end %>
</div>
