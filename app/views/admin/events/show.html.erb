<div class="w-full">
  <div class="mb-4">
    <%= link_to "← 練習会一覧に戻る", admin_events_path, class: "text-blue-600 hover:text-blue-700 text-sm" %>
  </div>
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('events.show.title') %></h1>
    <div class="flex gap-2">
      <%= link_to t('events.show.edit'), edit_admin_event_path(@event), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= button_to t('events.show.delete'), admin_event_path(@event), method: :delete, data: { turbo_confirm: t('events.show.confirm_delete') }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          <%= l(@event.date, format: :long) %>
        </h3>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:px-6">
            <dt class="text-sm font-medium text-gray-500 mb-1">公開状態</dt>
            <dd class="text-sm">
              <% if @event.published? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">公開中</span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">下書き</span>
              <% end %>
            </dd>
          </div>

          <div class="bg-white px-4 py-5 sm:px-6">
            <dt class="text-sm font-medium text-gray-500 mb-1"><%= t('events.form.venue') %></dt>
            <dd class="text-sm text-gray-900"><%= @event.venue.name %></dd>
          </div>

          <div class="bg-gray-50 px-4 py-5 sm:px-6">
            <dt class="text-sm font-medium text-gray-500 mb-1">時間</dt>
            <dd class="text-sm text-gray-900"><%= @event.start_time.strftime('%H:%M') %> 〜 <%= @event.end_time.strftime('%H:%M') %></dd>
          </div>

          <% if @event.notes.present? %>
            <div class="bg-white px-4 py-5 sm:px-6">
              <dt class="text-sm font-medium text-gray-500 mb-1"><%= t('events.form.notes') %></dt>
              <dd class="text-sm text-gray-900"><%= simple_format(@event.notes, {}, sanitize: false) %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">お知らせ</h3>
      </div>
      <div class="border-t border-gray-200">
        <% if @event.upcoming? %>
          <div class="px-4 py-3">
            <%= link_to "新しいお知らせを作成", new_admin_announcement_path(event_id: @event.id), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
        <% if @announcements.any? %>
          <ul class="divide-y divide-gray-200 border-t border-gray-200">
            <% @announcements.each do |announcement| %>
              <li>
                <%= link_to admin_announcement_path(announcement, event_id: @event.id), class: "block px-4 py-3 hover:bg-gray-50" do %>
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-medium text-blue-600 truncate"><%= announcement.subject %></p>
                    <% if announcement.sent? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">送信済み</span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">下書き</span>
                    <% end %>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="px-4 py-3 text-sm text-gray-500 border-t border-gray-200">お知らせはありません。</p>
        <% end %>
      </div>
    </div>
  </div>

  <%= render 'attendances', attendances: @attendances %>
</div>
