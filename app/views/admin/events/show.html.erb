<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('events.show.title') %></h1>
    <div class="flex gap-2">
      <%= link_to t('events.show.edit'), edit_admin_event_path(@event), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= button_to t('events.show.delete'), admin_event_path(@event), method: :delete, data: { turbo_confirm: t('events.show.confirm_delete') }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <% if notice = flash[:notice] %>
    <div class="rounded-md bg-green-50 p-4 mb-6">
      <p class="text-sm font-medium text-green-800"><%= notice %></p>
    </div>
  <% end %>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        <%= l(@event.date, format: :long) %>
      </h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">公開状態</dt>
          <dd class="mt-1 text-sm sm:mt-0 sm:col-span-2 flex items-center gap-3">
            <% if @event.published? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">公開中</span>
              <%= button_to "下書きに戻す", admin_event_path(@event), method: :patch, params: { event: { status: :draft } }, class: "inline-flex items-center px-3 py-1 text-xs font-medium rounded-md text-gray-700 bg-white border border-gray-300 hover:bg-gray-50" %>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">下書き</span>
              <%= button_to "公開する", admin_event_path(@event), method: :patch, params: { event: { status: :published } }, class: "inline-flex items-center px-3 py-1 text-xs font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
            <% end %>
          </dd>
        </div>

        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500"><%= t('events.form.venue') %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @event.venue.name %>
          </dd>
        </div>

        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500"><%= t('events.form.date') %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= l(@event.date, format: :long) %>
          </dd>
        </div>

        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">時間</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @event.start_time.strftime('%H:%M') %> 〜 <%= @event.end_time.strftime('%H:%M') %>
          </dd>
        </div>

        <% if @event.notes.present? %>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 sm:items-start">
            <dt class="text-sm font-medium text-gray-500"><%= t('events.form.notes') %></dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= simple_format(@event.notes, {}, sanitize: false) %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <%= render 'attendances', attendances: @attendances %>

  <div class="mt-8">
    <%= link_to "← 練習会一覧に戻る", admin_events_path, class: "text-blue-600 hover:text-blue-700" %>
  </div>
</div>
