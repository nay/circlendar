<%= form_with(model: announcement, url: announcement.persisted? ? admin_announcement_path(announcement, @event ? { event_id: @event.id } : {}) : admin_announcements_path(@event ? { event_id: @event.id } : {}), class: "space-y-6") do |form| %>
  <% if announcement.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= t('errors.template.header') %>
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% announcement.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="p-4 bg-gray-50 rounded-lg space-y-4">
    <div>
      <%= form.label :event_id, t("announcements.form.event"), class: "block text-sm font-medium text-gray-700 mb-2" %>
      <% if @event %>
        <%= form.select :event_id,
              options_from_collection_for_select([@event], :id, ->(e) { "#{l(e.date, format: :long)} - #{e.venue.name}" }, announcement.event_id),
              {},
              { class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
      <% else %>
        <%= form.select :event_id,
              options_from_collection_for_select(@events, :id, ->(e) { "#{l(e.date, format: :long)} - #{e.venue.name}" }, announcement.event_id),
              { include_blank: "" },
              { class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
      <% end %>
    </div>

    <%= render "template_controls", announcement: announcement %>
  </div>

  <div>
    <%= form.label :subject, t("announcements.form.subject"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :subject,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :body, t("announcements.form.body"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :body,
          rows: 10,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :to_address, t("announcements.form.to_address"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.email_field :to_address,
          value: announcement.to_address.presence || Current.user&.email_address,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    <p class="mt-1 text-sm text-gray-500">送信元として表示されるメールアドレス（通常は管理者のアドレス）</p>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2"><%= t("announcements.form.bcc_addresses") %></label>
    <div class="space-y-2 max-h-60 overflow-y-auto border border-gray-300 rounded-md p-3">
      <% @members.each do |member| %>
        <label class="flex items-center">
          <%= check_box_tag "announcement[bcc_addresses][]", member.user.email_address, announcement.bcc_addresses.present? ? announcement.bcc_addresses.include?(member.user.email_address) : true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-700"><%= member.name %> (<%= member.user.email_address %>)</span>
        </label>
      <% end %>
      <% if @members.empty? %>
        <p class="text-sm text-gray-500">お知らせ受信を希望しているメンバーがいません</p>
      <% end %>
    </div>
    <p class="mt-1 text-sm text-gray-500">チェックしたメンバーにBCCでメールが送信されます</p>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "キャンセル", admin_announcements_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
