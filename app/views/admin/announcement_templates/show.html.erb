<div class="w-full">
  <div class="mb-4">
    <%= link_to "← #{AnnouncementTemplate.model_name.human}一覧に戻る", admin_announcement_templates_path, class: "text-blue-600 hover:text-blue-700 text-sm" %>
  </div>
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= t("announcement_templates.show.title") %></h1>
    <div class="flex gap-2">
      <%= link_to t("announcement_templates.show.edit"), edit_admin_announcement_template_path(@announcement_template), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= button_to t("announcement_templates.show.delete"), admin_announcement_template_path(@announcement_template), method: :delete, data: { turbo_confirm: t("announcement_templates.show.confirm_delete") }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <% if notice = flash[:notice] %>
    <div class="rounded-md bg-green-50 p-4 mb-6">
      <p class="text-sm font-medium text-green-800"><%= notice %></p>
    </div>
  <% end %>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center gap-2">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          <%= @announcement_template.subject %>
        </h3>
        <% if @announcement_template.default? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"><%= t("announcement_templates.index.default") %></span>
        <% end %>
      </div>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 sm:items-start">
          <dt class="text-sm font-medium text-gray-500"><%= t("announcement_templates.form.body") %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 whitespace-pre-wrap">
            <%= simple_format(@announcement_template.body, {}, sanitize: true) %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>
