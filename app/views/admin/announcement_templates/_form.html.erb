<%= form_with(model: announcement_template, url: announcement_template.persisted? ? admin_announcement_template_path(announcement_template) : admin_announcement_templates_path, class: "space-y-6") do |form| %>
  <% if announcement_template.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            入力内容に問題があります:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% announcement_template.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :subject, t("announcement_templates.form.subject"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :subject,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    <p class="mt-1 text-sm text-gray-500">{{date}}、{{venue}} などのプレースホルダーが使えます</p>
  </div>

  <div>
    <%= form.label :body, t("announcement_templates.form.body"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :body,
          rows: 10,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    <p class="mt-1 text-sm text-gray-500">{{date}}、{{venue}}、{{start_time}}、{{end_time}}、{{notes}} などのプレースホルダーが使えます</p>
  </div>

  <div class="flex items-center">
    <%= form.check_box :default, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= form.label :default, t("announcement_templates.form.default"), class: "ml-2 block text-sm text-gray-700" %>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "キャンセル", admin_announcement_templates_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
