<div class="w-full max-w-2xl mx-auto">
  <div class="mb-4">
    <%= link_to "← #{User.model_name.human}一覧に戻る", admin_users_path, class: "text-blue-600 hover:text-blue-700 text-sm" %>
  </div>
  <h1 class="text-3xl font-bold text-gray-900 mb-8"><%= User.model_name.human %>を作成</h1>

  <%= form_with model: @user, url: admin_users_path, class: "space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= t('errors.template.header') %></h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6 space-y-6">
        <div>
          <%= form.label :name, "お名前", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :email_address, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email_address, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :organization_name, "所属団体", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :organization_name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :rank, "級", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :rank,
                options_for_select([["級なし（初心者）", "unknown"], ["F級", "f"], ["E級", "e"], ["D級", "d"], ["C級", "c"], ["B級", "b"], ["A級", "a"]], @user.rank),
                { include_blank: true },
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :description, "自己紹介", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 3, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password, autocomplete: "new-password", maxlength: 72, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :password_confirmation, "パスワード（確認）", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", maxlength: 72, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <hr class="border-gray-200">

        <div>
          <span class="block text-sm font-medium text-gray-700 mb-2">権限</span>
          <div class="flex gap-6">
            <label class="inline-flex items-center">
              <%= form.radio_button :role, "admin", class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
              <span class="ml-2 text-sm text-gray-700">管理者</span>
            </label>
            <label class="inline-flex items-center">
              <%= form.radio_button :role, "member", checked: true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
              <span class="ml-2 text-sm text-gray-700">メンバー</span>
            </label>
          </div>
        </div>

        <div class="flex items-center">
          <%= form.check_box :receives_announcements, checked: true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :receives_announcements, "お知らせメールを受信する", class: "ml-2 block text-sm text-gray-700" %>
        </div>
      </div>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "キャンセル", admin_users_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "作成", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    </div>
  <% end %>
</div>
