<div class="flex items-center justify-center bg-gray-50 py-8 px-4 sm:px-6 lg:px-8 min-h-screen sm:min-h-0 sm:py-16">
  <div class="max-w-md w-full space-y-6">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        <%= t('sessions.new.title') %>
      </h2>
    </div>

    <% if alert = flash[:alert] %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800"><%= alert %></p>
          </div>
        </div>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="rounded-md bg-green-50 p-4">
        <div class="flex">
          <div class="ml-3">
            <p class="text-sm font-medium text-green-800"><%= notice %></p>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with url: session_url, class: "mt-8 space-y-6" do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.label :email_address, t('sessions.new.email_address'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email_address,
                required: true,
                autofocus: true,
                autocomplete: "username",
                placeholder: t('sessions.new.email_address'),
                value: params[:email_address],
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        <div>
          <%= form.label :password, t('sessions.new.password'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: t('sessions.new.password'),
                maxlength: 72,
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-white placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="text-sm">
          <%= link_to t('sessions.new.forgot_password'), new_password_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
        </div>
      </div>

      <div>
        <%= form.submit t('sessions.new.sign_in'), class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>

      <div class="text-center">
        <span class="text-sm text-gray-600">アカウントをお持ちでない方は</span>
        <%= link_to "新規登録", signup_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
