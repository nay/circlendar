<div class="w-full">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">ダッシュボード</h1>
    <p class="mt-2 text-gray-600">こんにちは、<%= current_member.name %>さん</p>
  </div>

  <!-- 未回答の練習会 -->
  <% if @undecided_events.any? %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">未回答の練習会</h2>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @undecided_events.each do |item| %>
            <%= render 'event', event: item[:event], attendance: item[:attendance] %>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- 参加予定の練習会 -->
  <% if @attending_events.any? %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">参加予定の練習会</h2>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @attending_events.each do |item| %>
            <%= render 'event', event: item[:event], attendance: item[:attendance] %>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- 不参加の練習会 -->
  <% if @not_attending_events.any? %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-700 mb-4">不参加の練習会</h2>
      <div class="bg-white shadow overflow-hidden sm:rounded-md opacity-75">
        <ul class="divide-y divide-gray-200">
          <% @not_attending_events.each do |item| %>
            <%= render 'event', event: item[:event], attendance: item[:attendance] %>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if @attending_events.empty? && @undecided_events.empty? && @not_attending_events.empty? %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500 text-lg">現在、予定されている練習会はありません</p>
    </div>
  <% end %>
</div>
