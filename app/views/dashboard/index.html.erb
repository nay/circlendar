<div class="w-full">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">ダッシュボード</h1>
    <p class="mt-2 text-gray-600">こんにちは、<%= current_member.name %>さん</p>
  </div>

  <!-- カレンダータイムライン -->
  <%= render 'calendar_timeline', calendar_days: @calendar_days %>

  <!-- 月ごとの練習会リスト -->
  <% if @events_by_month.any? %>
    <% @events_by_month.each do |month_data| %>
      <div class="mb-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4"><%= month_data[:month].strftime('%Y年%-m月') %></h2>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <ul class="divide-y divide-gray-200">
            <% month_data[:events].each do |item| %>
              <%= render 'event', event: item[:event], attendance: item[:attendance] %>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <p class="text-gray-500 text-lg">現在、予定されている練習会はありません</p>
    </div>
  <% end %>
</div>
